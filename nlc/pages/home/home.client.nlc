<module home-client>

    <sync-property syncProp/>

    <server-only>

        <method Setup>

            function(){
                this->syncProp=0;
            }   

        </method>

    </server-only>

    <client-only>

        <async-method Setup>

            function() {

                @home-client-->syncProp = (await this-->syncProp)+5;

                console.log(await @home-client-->syncProp);
            }

        </async-method>

    </client-only>

</module>